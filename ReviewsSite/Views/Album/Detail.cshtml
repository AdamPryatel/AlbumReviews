<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/styles/AlbumStyles/DetailStyle.css">
</head>
<body>
    <h1>@Model.Name by @Model.BandName</h1>
    <div class="Container">
        <p><img src="~/@Model.Image" width="350" /></p>
        <div class="songList">
            @foreach (var song in Model.ListofSongs)
            {
                <ul>
                    <li>@song</li>
                </ul>
            }
         </div>
    </div>

    <p>Description: @Model.Description.</p>
    
    <hr />
    <h3>Reviews</h3>
    <div class="ReviewContainer">
        @foreach (var review in Model.Review)
        {
            <ul>
                <li>Rating: @review.Rating Star</li>
                <li>Review: @review.Content</li>
                <li>UserName: @review.ReviewerName</li>
            </ul>
        }
    </div>

    <p><a href ="/Review/Create">Add Review</a></p>

</body>
</html>

@{

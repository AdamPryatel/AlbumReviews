<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/styles/AlbumStyles/DetailStyle.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>
<body>

    <header>
        <nav>
            <ul class="nav_links">
                <li><a href="/Album/Index">HOME</a></li>
                <li><strong>|</strong></li>
                <li><a href="/Review/Create/">ADD REVIEW</a></li>
                <li><strong>|</strong></li>
                <li><a href="">CREATORS</a></li>
            </ul>
        </nav>
    </header>



    <h1>@Model.Name by @Model.BandName</h1>
    <div class="Container">
        <p><img src="~/@Model.Image" width="350" /></p>
        <div class="songList">
            @foreach (var song in Model.ListofSongs)
            {
                <ul>
                    <li>@song</li>
                </ul>
            }
        </div>
    </div>

    <p>Description: @Model.Description.</p>

    <hr />
    <h3>Reviews</h3>
    <div class="ReviewContainer">
        @foreach (var review in Model.Review)
        {
            <ul>
                <li>Rating: @review.Rating Star</li>
                <li>Review: @review.Content</li>
                <li>UserName: @review.ReviewerName</li>
            </ul>

            <a href="/Review/Update/@review.Id">Update Review</a>

            <a href="/Review/Delete/@review.Id">Delete Review</a>

        }

    </div>

    <p><a href="/Review/CreateByAlbumId/?albumId=@Model.Id">Add Review</a></p>



</body>
</html>

@{
}